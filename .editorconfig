# This file configures your Android Studio editor with some reasonable defaults

root = true

[*.java]
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
ij_java_imports_layout = *
ij_java_class_count_to_use_import_on_demand = 999
ij_java_names_count_to_use_import_on_demand = 999
ij_continuation_indent_size = 4

[*.{kt,xml,gradle,md}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf